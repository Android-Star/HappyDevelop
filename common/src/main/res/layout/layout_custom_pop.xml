<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55000000"
    android:id="@+id/layoutBg"
    >

  <RelativeLayout
      android:id="@+id/rlBody"
      android:layout_width="590px"
      android:layout_height="344px"
      android:layout_centerInParent="true"
      android:background="@drawable/custom_pop_bg"
      >
    <ImageView
        android:layout_width="580px"
        android:layout_height="334px"
        android:layout_centerInParent="true"
        android:background="@drawable/fanyi_popup_beijing"
        android:contentDescription="@string/app_name"
        />
    <LinearLayout
        android:id="@+id/layoutRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
    </LinearLayout>
    <TextView
        android:id="@+id/txtContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:includeFontPadding="false"
        android:textStyle="bold"
        android:layout_marginTop="100px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:textSize="30px"
        android:textColor="#a28704"
        android:text="文本"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48px"
        android:layout_centerHorizontal="true"
        >
      <TextView
          android:id="@+id/tvLeft"
          android:layout_width="216px"
          android:layout_height="74px"
          android:gravity="center"
          android:includeFontPadding="false"
          android:textStyle="bold"
          android:textSize="37px"
          android:textColor="#ffffff"
          android:text="取消"
          android:background="@drawable/button_left"
          />
      <TextView
          android:id="@+id/tvRight"
          android:layout_width="216px"
          android:layout_height="74px"
          android:visibility="visible"
          android:layout_marginLeft="50px"
          android:gravity="center"
          android:includeFontPadding="false"
          android:textStyle="bold"
          android:textSize="37px"
          android:textColor="#ffffff"
          android:text="删除"
          android:background="@drawable/button_right"
          />
    </LinearLayout>
  </RelativeLayout>
</RelativeLayout>
